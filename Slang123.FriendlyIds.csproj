<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net9.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
    <Title>SwaggerGen FriendlyIds</Title>
    <Description>A simple extension to generate friendly names in an ABP.io api</Description>
    <PackageReadmeFile>README.md</PackageReadmeFile>
    <PackageTags>abp;io;friendly;swagger;abp.io;gen;options</PackageTags>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageProjectUrl>https://github.com/slang123/Slang123.FriendlyIds</PackageProjectUrl>
    <RepositoryUrl>https://github.com/slang123/Slang123.FriendlyIds</RepositoryUrl>
  </PropertyGroup>

  <ItemGroup>
    <None Update="README.md">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
  </ItemGroup>

</Project>
